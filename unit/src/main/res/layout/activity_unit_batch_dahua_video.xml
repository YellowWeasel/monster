<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_base_layout_background"
        android:orientation="vertical">

        <com.erayic.agr.common.dahua.DaHuaVideoView
            android:id="@+id/erayic_jar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />


        <RelativeLayout
            android:layout_width="160dip"
            android:layout_height="160dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dip"
            android:layout_marginEnd="10dip"
            android:layout_marginRight="10dip"
            android:background="@null">

            <ImageButton
                android:id="@+id/iv_live_bt_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_base_video_bottom"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/iv_live_bt_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_base_video_top"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/iv_live_bt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_base_video_left"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/iv_live_bt_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_base_video_right"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/iv_live_bt_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:src="@drawable/app_base_video_screen" />
        </RelativeLayout>
    </RelativeLayout>

    <com.erayic.agr.common.view.tooblbar.ErayicToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/app_base_bar_background"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

</android.support.design.widget.CoordinatorLayout>