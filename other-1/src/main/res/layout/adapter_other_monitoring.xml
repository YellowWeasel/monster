<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basics_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:id="@+id/name_icon_id"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center|left"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/other_image_item_icon" />

    <TextView
        android:id="@+id/name_control_id"
        android:background="@color/monitoring_background"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/app_base_layout_background"

        android:text="远程监控"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>


</LinearLayout>