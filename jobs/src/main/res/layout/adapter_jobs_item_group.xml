<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_base_item_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp">

        <ImageView
            android:id="@+id/jobs_content_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/app_base_android_1" />

        <TextView
            android:id="@+id/jobs_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical|left"
            android:text="购买记录"
            android:textColor="@color/app_base_text_title_1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/jobs_content_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/app_base_text_title_3"
            android:textSize="14sp" />

        <com.erayic.agr.common.view.progress.BGAProgressBar
            android:id="@+id/jobs_content_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:progress="95"
            app:bga_pb_isCapRounded="false"
            app:bga_pb_isHiddenText="false"
            app:bga_pb_mode="circle"
            app:bga_pb_reachedColor="#1f8875"
            app:bga_pb_reachedHeight="2dp"
            app:bga_pb_textColor="#1f8875"
            app:bga_pb_textMargin="10dp"
            app:bga_pb_textSize="10sp"
            app:bga_pb_unReachedColor="#ECF0F1"
            app:bga_pb_unReachedHeight="1dp" />

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_base_tab_strip_divider" />
</LinearLayout>