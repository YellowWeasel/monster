<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_base_layout_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="50dp">

        <TextView
            android:id="@+id/jobs_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical|left"
            android:text="10:38"
            android:textColor="@color/app_base_text_title_1"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="match_parent">

            <View
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/app_base_tab_strip_divider" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/image_jobs_item_child_round" />
        </RelativeLayout>

        <TextView
            android:id="@+id/jobs_content_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:text="111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
            android:textColor="@color/app_base_text_title_3"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/jobs_content_goto"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/app_base_default_right" />

    </TableRow>

    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/app_base_tab_strip_divider"/>
</LinearLayout>