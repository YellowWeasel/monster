<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/serverproduct_agricultural_detail_item_title_relativelayout"
    android:background="@color/app_base_layout_background"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/serverproduct_agricultural_detail_item_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textColor="@color/toptitle"
                android:textSize="@dimen/title" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/serverproduct_agricultural_detail_item_source_textview"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/title" />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/serverproduct_agricultural_detail_item_publishdate_textview"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/fontcolor"
                    android:textSize="@dimen/content" />
            </LinearLayout>
            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/serverproduct_agricultural_detail_item_content_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/contentbg"
                android:lineSpacingExtra="4dp"
                android:padding="5dp"
                android:textColor="@color/textfont"
                android:textSize="@dimen/content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>