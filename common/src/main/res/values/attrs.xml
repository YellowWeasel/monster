<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableTextView">
        <attr name="etv_MaxLinesOnShrink" format="reference|integer" />
        <attr name="etv_EllipsisHint" format="reference|string" /><!--default is ..-->
        <attr name="etv_ToExpandHint" format="reference|string" /><!--“展开”提示字符串，默认为“展开”-->
        <attr name="etv_ToShrinkHint" format="reference|string" /><!--“收缩”提示字符串，默认为“收缩”-->
        <attr name="etv_GapToExpandHint" format="reference|string" /><!--“toExpandHint”和“trimmed text”之间的差距-->
        <attr name="etv_GapToShrinkHint" format="reference|string" /><!--“toShrinkHint”和“trimmed text”之间的差距-->
        <attr name="etv_EnableToggle" format="reference|boolean" /><!--点击ExpandTextView切换状态-->
        <attr name="etv_ToExpandHintShow" format="reference|boolean" /><!--是否显示“展开”-->
        <attr name="etv_ToShrinkHintShow" format="reference|boolean" /><!--是否显示“收缩”-->
        <attr name="etv_ToExpandHintColor" format="reference|color" /><!--“展开”颜色-->
        <attr name="etv_ToShrinkHintColor" format="reference|color" /><!--“收缩”颜色-->
        <attr name="etv_ToExpandHintColorBgPressed" format="reference|color" /><!--“展开”按下背景颜色-->
        <attr name="etv_ToShrinkHintColorBgPressed" format="reference|color" /><!--“收缩”按下背景颜色-->
        <attr name="etv_InitState" format="enum"><!--初始化状态，默认是收缩-->
            <enum name="shrink" value="0" />
            <enum name="expand" value="1" />
        </attr>
    </declare-styleable>

    <!--金额 样式  元大 角分小 $25.33-->
    <declare-styleable name="MoneyView">
        <!--金额-->
        <attr name="money" format="float" />
        <!--金额颜色-->
        <attr name="money_color" format="color" />
        <!--元大小-->
        <attr name="yuan_size" format="dimension" />
        <!--分大小-->
        <attr name="cent_size" format="dimension" />
        <!--单元大小-->
        <attr name="unit_size" format="dimension" />
        <!--单位名称-->
        <attr name="unit_text" format="string" />
        <!--前缀文本-->
        <attr name="prefix_text" format="string" />
        <!--前缀大小-->
        <attr name="prefix_size" format="dimension" />
        <!--前缀颜色-->
        <attr name="prefix_color" format="color" />
        <!--前缀右边距-->
        <attr name="prefix_padding" format="dimension" />
        <!--是否使用千分符-->
        <attr name="grouping" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PagerSlidingTabStrip">
        <!--滑动条的颜色-->
        <attr name="pstsIndicatorColor" format="color" />
        <!--滑动条所在的那个全宽线的颜色-->
        <attr name="pstsUnderlineColor" format="color" />
        <!--每个标签的分割线的颜色-->
        <attr name="pstsDividerColor" format="color" />
        <!--滑动条的高度-->
        <attr name="pstsIndicatorHeight" format="dimension" />
        <!--滑动条所在的那个全宽线的高度-->
        <attr name="pstsUnderlineHeight" format="dimension" />
        <!--分割线底部和顶部的填充宽度-->
        <attr name="pstsDividerPadding" format="dimension" />
        <!--每个标签左右填充宽度-->
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <!--被选择的标签的偏移滚动-->
        <attr name="pstsScrollOffset" format="dimension" />
        <!--每个标签的背景，应该是一个StateListDrawable-->
        <attr name="pstsTabBackground" format="reference" />
        <!--如果设置为true，每个标签是相同的控件，均匀平分整个屏幕，默认是false-->
        <attr name="pstsShouldExpand" format="boolean" />
        <!--如果为true，所有标签都是大写字母，默认为true-->
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <!--外边框宽度-->
        <attr name="border_width" format="dimension" />
        <!--外边框颜色-->
        <attr name="border_color" format="color" />
        <!--是否显示外边框-->
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>


    <!--日期选择器 start-->
    <declare-styleable name="WheelFullDatePickerStyle">

        <!-- 顯示民國年 -->
        <attr name="showTaiwanYear" format="boolean" />
        <!-- 小於0的數字前面加0 -->
        <attr name="addZeroIfSmallThanTen" format="boolean" />
        <!-- 選單日期是否即時顯示 -->
        <attr name="setCurrentTimeVisible" format="boolean" />
        <!-- 能不能設定今天以前的時間 -->
        <attr name="canSetUpPastTime" format="boolean" />
        <!-- 能不能設定今天以後的時間 -->
        <attr name="canSetUpFutureTime" format="boolean" />
        <!-- 是否顯示年月日字串 -->
        <attr name="showDateLastString" format="boolean" />
    </declare-styleable>
    <declare-styleable name="WheelTwoDimensionPickerStyle">

        <!-- 是否總是顯示兩個滾輪 -->
        <attr name="alwaysShowTwoWheel" format="boolean" />
        <!-- 如果滾輪樣式是純粹顯示文字，左邊滾輪的顯示行數 預設為一行 -->
        <attr name="leftWheelVisibleLine" format="integer" />
        <!-- 如果滾輪樣式是純粹顯示文字，右邊滾輪的顯示行數 預設為一行 -->
        <attr name="rightWheelVisibleLine" format="integer" />
        <!-- 如果滾輪樣式是純粹顯示文字，兩邊滾輪的文字大小 格式為dip -->
        <attr name="wheelTwoDimensionTextSize" format="integer" />
        <!-- 是否即時顯示所選資料 -->
        <attr name="isCurrentSelectVisible" format="boolean" />
    </declare-styleable>
    <declare-styleable name="WheelSinglePickerStyle">

        <!-- 如果滾輪樣式是純粹顯示文字，滾輪的顯示行數 預設為一行 -->
        <attr name="visibleLine" format="integer" />
        <!-- 如果滾輪樣式是純粹顯示文字，兩邊滾輪的文字大小 格式為dip -->
        <attr name="singleTextSize" format="integer" />
    </declare-styleable>
    <declare-styleable name="TriangleViewStyle">
        <attr name="triangleColor" format="reference|color" />
        <attr name="shapeArrow">

            <!-- show event in current month. -->
            <enum name="UP" value="0" />
            <!-- show event in current month and preious month. -->
            <enum name="DOWN" value="1" />
            <!-- show event in current month and next month. -->
            <enum name="RIGHT" value="2" />
            <!-- show event in all month. -->
            <enum name="LEFT" value="3" />
        </attr>
    </declare-styleable>
    <declare-styleable name="WheelTimerStyle">
        <!-- 是否總是顯示兩個滾輪 -->
        <attr name="timeMode">
            <!-- 選擇模式 -->
            <enum name="select" value="0" />
            <!-- 倒數模式 -->
            <enum name="countDown" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="DatePicker">
        <attr name="picker_text_color" format="color" />
        <attr name="picker_select_textColor" format="color" />
        <attr name="picker_split" format="color" />
        <attr name="picker_split_height" format="dimension" />
    </declare-styleable>
    <!--日期选择器 end-->


</resources>